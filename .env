# Application Configuration
REACT_APP_NAME=Adherant Platform
REACT_APP_VERSION=1.0.0
REACT_APP_DESCRIPTION=User Profile and Document Management Platform

# Feature Flags
REACT_APP_ENABLE_REGISTRATION=true
REACT_APP_ENABLE_PROFILE_EDIT=true
REACT_APP_ENABLE_DOCUMENT_PREVIEW=true
REACT_APP_ENABLE_SEARCH=true
REACT_APP_ENABLE_NOTIFICATIONS=true

# UI Configuration
REACT_APP_ENABLE_DARK_MODE=true
REACT_APP_DEFAULT_THEME=light
REACT_APP_ITEMS_PER_PAGE=10

# Development Configuration
REACT_APP_DEBUG=false
REACT_APP_SHOW_LOGS=false
GENERATE_SOURCEMAP=true

