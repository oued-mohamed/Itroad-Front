REACT_APP_API_TIMEOUT=30000

# Authentication Configuration
REACT_APP_JWT_STORAGE_KEY=adherant_token
REACT_APP_REFRESH_TOKEN_KEY=adherant_refresh_token

# File Upload Configuration
